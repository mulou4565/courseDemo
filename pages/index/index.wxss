page {
    background-color: #ffffff;
}

.container {
    padding: 48rpx 20rpx;
}

.logo {
    width: 100%;
    height: 200rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.logo image {
    width: 344rpx;
    height: 176rpx;
}

.nav-list {
    width: 100%;
    height: 176rpx;
    border-radius: 24rpx;
    background: #ffffff;
    box-shadow: 0px 0px 24rpx -4rpx rgba(0, 0, 0, 0.1);
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 14rpx 40rpx;
    margin-top: 46rpx;
}

.nav-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.nav-item image {
    width: 96rpx;
    height: 96rpx;
}

.nav-item title {
    font-size: 24rpx;
    color: #3d3d3d;
    margin-top: 4rpx;
}

.today-course {
    width: 100%;
    border-radius: 24rpx;
    background: #ffffff;
    box-shadow: 0px 0px 24rpx -4rpx rgba(0, 0, 0, 0.1);
    margin-top: 30rpx;
    padding: 30rpx 30rpx 70rpx 30rpx;
}

.course-option {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 70rpx;
}

.option-title {
    font-size: 40rpx;
    font-weight: 500;
    color: #3e9c96;
}

.option-time {
    font-size: 26rpx;
    color: #666666;
}

.course-box {
    margin-top: 80rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.course-box .empty-img {
    width: 264rpx;
    height: 138rpx;
}

.empty-title {
    font-size: 26rpx;
    color: #999999;
    margin-top: 50rpx;
}