<!--pages/login/index.wxml-->
<!-- <text>pages/login/index.wxml</text> -->

<view class="container">
    <view class="header">
        <!-- aspectFill 保持纵横比缩放，使图片完整地显示出来 -->
        <image src="#" mode="aspectFill"></image>  
    </view>
    <view class="login">
        <view class="form-item">
            <image src="#" mode="aspectFill"></image>
            <input type="text" model:value="{{stuId}}" class="input" placeholder="请输入学号"/>
        </view>
        <view class="form-item">
            <image src="#" mode="aspectFill"></image>
            <input type="password" model:value="{{password}}" class="input" placeholder="请输入密码"/>
        </view>
        <view bindtap="switchStatus" class="checkbox-item">
            <checkbox checked="{{saveCount}}" class="theme"></checkbox>
            <view class="margin-left-sm">记住账号密码</view>
        </view>
        <button class="cu-btn" bindtap="login">登录</button>  <!-- 绑定点击事件 -->
    </view>
</view>